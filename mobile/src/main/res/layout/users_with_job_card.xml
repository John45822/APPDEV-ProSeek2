<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/list"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/rounded_cardbg"
    android:layout_marginBottom="10dp">


        <!-- Profile image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_edittext_2_bg"
            android:padding="0dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/progirl1" />

        <!-- Text and stars -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="#444444"/>
            <!--Rating
            ★★★★★-->
            <RatingBar
                android:id="@+id/rating_preview"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:isIndicator="true"
                android:numStars="5"
                android:layout_marginStart="-60dp"
                android:rating="5"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:stepSize="1"
                android:theme="@style/RatingBarWhite" />
        </LinearLayout>

        <!-- Chat bubble -->
        <ImageView
            android:id="@+id/message_user"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/blackmessengerrmbg" />
</LinearLayout>
