<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00023E"
    tools:context=".MainActivityPostServiceForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/logo_section"
            android:layout_width="220dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ProSeek SERVICES"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upperfunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_section"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/searchbar"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_2_bg"
                android:drawablePadding="20dp"
                android:padding="4dp"
                android:text="Welcome, User!"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <ImageView
                android:id="@+id/notif"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:src="@drawable/bellat_rmbg" />


            <ImageView
                android:id="@+id/messages"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/message1" />

            <ImageView
                android:id="@+id/urprofile"
                android:layout_width="30dp"
                android:layout_height="31dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/profileremovebg" />
        </LinearLayout>

        <TextView
            android:id="@+id/serv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upperfunction"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="12dp"
            android:text="SERVICES"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/white_outline_box"
            android:textStyle="bold"
            android:textSize="16sp" />



        <!-- Services in a grid layout as shown in screenshot -->
        <LinearLayout
            android:id="@+id/services_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <!-- First row of services -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/chip_house_chores"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="House Chores"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chip_personal_trainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Personal Trainer"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Second row of services -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/chip_tutoring"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Tutoring"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chip_photography"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Photography"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Third row of services -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/chip_project_assistant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Project Assistant"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chip_health_care"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Health Care"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fourth row of services -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/chip_food_delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Food Delivery"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chip_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="Tailoring"
                    android:textColor="#00023E"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Background section -->
        <TextView
            android:id="@+id/background_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/services_grid"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            android:text="Background"
            android:textColor="@android:color/white"
            android:background="@drawable/white_outline_box"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Description Field -->
        <TextView
            android:id="@+id/description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Description"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/description_label"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_rounded_bg"
            android:hint="Enter background about type of your service"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Submit Button -->
        <TextView
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_rounded_bg"
            android:text="SUBMIT"
            android:textColor="#00023E"
            android:textStyle="bold"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>
</ScrollView>
